<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/orion_vertical_padding"
    android:layout_marginBottom="@dimen/orion_vertical_padding"
    android:layout_marginHorizontal="@dimen/orion_card_side_margin"
    app:cardCornerRadius="@dimen/orion_card_radius"
    app:cardElevation="0.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.orion.settings.widget.WallpaperBlurView
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:elevation="0.0dip" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ui_scrim"
            android:alpha="0.1" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/orion_cool_branding_half_height">
                <com.crdroid.settings.fragments.RainbowTextView
                android:layout_gravity="center"
                android:id="@+id/cool_branding_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orionspace_title"
                style="@style/TextAppearance_orionCoolBranding" />
        </LinearLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
